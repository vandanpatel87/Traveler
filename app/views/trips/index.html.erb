<h2>Listing trips</h2>

<table class = "table table-striped table-bordered">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= link_to trip.name, trip %></td>
    <td><%= trip.description %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<p> 
  <button class = "btn" type = "button"> <%= link_to 'New Trip', new_trip_path %> </button>
</p>